@model Blog

@{
    ViewData["Title"] = "Blogs Details";
}

<ul class="breadcrumb">
    <li>
        <p><a asp-controller="home" asp-action="index">Admin</a></p>
    </li>
    <li>
        <p><a asp-action="index">@BlogResource.Blogs</a></p>
    </li>
    <li><a class="active">@CrudResource.Details</a> </li>
</ul>
<div class="page-title">
    <a asp-action="index">
        <i class="far fa-arrow-alt-circle-left"></i>
    </a>
    <h3>Admin - @BlogResource.Blogs</h3>
</div>


<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-body ">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <p class="form-control">
                            @Model.Title
                        </p>
                    </div>
                    <div class="form-group">
                        <label asp-for="Body" class="control-label"></label>
                        <textarea asp-for="Body"></textarea>
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <image asp-caption="@BlogResource.BlogImage"
                               asp-for="Image"
                               asp-path="/uploads/images/blogs/@Model.ImagePath"
                               readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorId" class="control-label"></label>
                        <p class="form-control">
                            @Model.Author.FullName
                        </p>
                    </div>
                    <div class="form-group">
                        <label asp-for="BlogCategoryId" class="control-label"></label>
                        <p class="form-control">
                            @Model.BlogCategory.Name
                        </p>
                    </div>
                    <div class="form-group">
                        <label asp-for="Facebook" class="control-label"></label>
                        <p class="form-control">
                            @Model.Facebook
                        </p>
                    </div>
                    <div class="form-group">
                        <label asp-for="Twitter" class="control-label"></label>
                        <p class="form-control">
                            @Model.Twitter
                        </p>
                    </div>
                    <div class="form-group">
                        <label asp-for="Linkedin" class="control-label"></label>
                        <p class="form-control">
                            @Model.Linkedin
                        </p>
                    </div>
                    <div class="form-group">
                        <label asp-for="Instagram" class="control-label"></label>
                        <p class="form-control">
                            @Model.Instagram
                        </p>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-warning" asp-action="edit" asp-route-id="@Model.Id">@CrudResource.EditBtn</a>
                        <a class="btn btn-info" asp-action="index">@CrudResource.BackToList</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section addcss {
    <link rel="stylesheet" href="~/lib/jquery-image-input/image-input.css" />
}


@section addjs {

    <script src="~/lib/jquery-image-input/jquery.image-input.js"></script>
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script class="removeable">$(document).ready(function () {
            ClassicEditor
                .create(document.querySelector('#Body'))
                .then(editor => {
                    editor.isReadOnly = true;
                })
                .catch(error => {
                    console.error(error);
                });

    
        });</script>
}
